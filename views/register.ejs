<div class="form-wrapper">
  <h1>Register</h1>
  <form method="POST">
    <div class="form-item">
      <label for="Name"></label>
      <input type=text name="name" required="required" placeholder="Name"></input>
    </div>
    <div class="form-item">
      <label for="E-mail"></label>
      <input type="email" name="email" required="required" placeholder="Email Address"></input>
    </div>
    <div class="form-item">
      <label for="Password"></label>
      <input type="password" name="password" required="required" placeholder="Password"></input>
    </div>
    <div class="form-item">
      <label for="confirmPassword"></label>
      <input type="password" name="confirmPassword" required="required" placeholder="confirmPassword"></input>
    </div>
    <div class="button-panel">
      <input type="submit" class="button" title="Register" value="Register"></input>
    </div>
  </form>
</div>